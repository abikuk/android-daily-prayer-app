<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="0dip"
    android:paddingRight="0dip"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dip" tools:context=".MainActivity">

    <TextView
        android:id="@+id/randomTextView"
        android:layout_width="wrap_content"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Every unspoken curse against my life, break, in the name of Jesus."
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/shared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:visibility="gone"
        android:text="content here"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn"
        android:paddingRight="16dip"
        android:paddingLeft="16dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Loading..." />

    <TextView
        android:id="@+id/timeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

